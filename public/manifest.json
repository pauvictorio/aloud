{
	"manifest_version": 3,

	"name": "Aloud",
	"description": "Reads text aloud",
	"version": "1.0.0",

	"action": {
		"default_title": "Aloud",
		"default_popup": "index.html",
		"default_icon": {
			"16": "./icons/icon16.png",
			"32": "./icons/icon32.png",
			"48": "./icons/icon48.png",
			"128": "./icons/icon128.png"
		}
	},
	"icons": {
		"16": "./icons/icon16.png",
		"32": "./icons/icon32.png",
		"48": "./icons/icon48.png",
		"128": "./icons/icon128.png"
	},
	"permissions": [
		"tabs",
		"scripting",
		"tts",
		"contextMenus"
	],
	"host_permissions": [
		"*://*/*"
	]
}